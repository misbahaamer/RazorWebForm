<h3>Big Table Data</h3>

<div class="container">
    <h3>User Data List</h3>
    <form method="post">
        <div class="form-group col-md-4">
            <label for="States">Select: </label>
            <select id="inputState" class="form-control" asp-items="Model.Columns">
                @*<option selected >Choose...</option>
            <option  ></option>*@
            </select>
            <input type="text" class="form-control" id="searchId" >
            <button type="submit" asp-page-handler="">Search</button>
        </div>
        <table class="table table-sm">
            <button type="submit" asp-page-handler="Delete">Delete</button>
            <thead>
                <tr>
                    @*<th scope="col">#</th>*@
                    <th></th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Email</th>
                    <th scope="col">avatar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<th scope="row">@item.Id</th>*@
                        <td><input class="form-check-input" type="checkbox" value=@item.Id name="AreChecked"></td>
                        <td>@item.First_Name</td>
                        <td>@item.Last_Name</td>
                        <td>@item.Email</td>
                        <td>@item.Avatar</td>
                    </tr>
                }

            </tbody>
        </table>
    </form>
    
</div>
