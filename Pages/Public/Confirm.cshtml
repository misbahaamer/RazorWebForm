@page 
@model RazorWebApp.Pages.Public.ConfirmModel
@{
}
<div class="container">
    <h3>User Data List</h3>
    <form method="post">
        <button type="submit" asp-page-handler="SaveChanges">Save Changes</button>
        <table class="table">
            <thead>
                <tr>
                    @*<th scope="col">Persons</th>*@
                    @*<th scope="col">Netflix</th>
        <th scope="col">Hulu</th>
        <th scope="col">Mtv</th>
        <th scope="col">Disney</th>
        <th scope="col">Hotstar</th>
        <th scope="col">Amzaon</th>
        <th scope="col">Peacock</th>*@
                        <th scope="col">Person</th>
                        @foreach (var sub in Model.persons.plist.OrderByDescending(x => x.subscriptions.Count()).First().subscriptions)
                        {
                            <th scope="col">@sub.SubscriptionName</th>
                        }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.persons.plist)
                {
                    var subscriptions = Model.AllSubscriptions;
                    <tr scope="row">
                        <th  scope="row">@item.PersonName</th>
                        <td>
                            @if (subscriptions.Select(x => x.SubscriptionName).ToList().Contains(item.subscriptions.Select(x => x.SubscriptionName).FirstOrDefault()))
                            {
                                <p>present</p>
                            }
                        </td>
                        <td ><input class="form-check-input" value ="@item.PersonId" type="checkbox" name="Amazon"></td>
                        <td ><input class="form-check-input" value ="@item.PersonId" type="checkbox" name="Netflix"></td>
                        <td ><input class="form-check-input" value="@item.PersonId" type="checkbox" name="Hulu"></td>
                        <td ><input class="form-check-input" value="@item.PersonId" type="checkbox" name="Peacock"></td>
                        <td ><input class="form-check-input" value="@item.PersonId" type="checkbox" name="Disney"></td>

                    </tr>
                }

            </tbody>
        </table>
    </form>

</div>